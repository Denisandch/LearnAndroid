<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.CustomViewByOld" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->

        <item name="defaultStyleAttr">@style/CustomViewStyleDefaultAttr</item>

        <item name="ticTacToeFieldStyle">@style/GlobalTicTacToeStyle</item>
    </style>


    <style name="CustomViewStyle" >
        <item name="buttonBackground">@color/design_default_color_secondary_variant</item>
    </style>

    <style name="CustomViewStyleDefaultAttr" parent="CustomViewStyle" >
        <item name="buttonBackground">#DF3A3A</item>
    </style>

    <style name="CustomViewStyleDefaultRes" parent="CustomViewStyle" >
        <item name="buttonBackground">#48E4EA</item>
    </style>


    <style name="DefaultTicTacToeStyle">
        <item name="playerFirstColor">#8C0A8A</item>
        <item name="playerSecondColor">#207C05</item>
        <item name="gridColor">#000000</item>
    </style>

    <style name="GlobalTicTacToeStyle" parent="DefaultTicTacToeStyle">
        <item name="playerFirstColor">#0446B6</item>
        <item name="playerSecondColor">#C30000</item>
    </style>

</resources>